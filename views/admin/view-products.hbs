<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success" style="width: 125px; height:40px;margin-left:auto">Add
        Product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">S.No</th>
          <th scope="col">Tittle</th>
          <th scope="col">Prize</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
            <td>RS {{this.Prize}}/-</td>
            <td>{{this.Category}}</td>
            <td>{{this.Description}}</td>
            <td><img style="width: 50px;" src="/product-images/{{this._id}}.jpg"></td>
            <td>
              <a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
              <a href="admin/delete-product/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete {{this.Name}}')">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>