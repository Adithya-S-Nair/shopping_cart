<section>
    <div class="container">
        {{#if orderAvail}}
        <div class="cart-heading">
            <center>
                <h2 class="text-warning">Orders</h2>
            </center>
        </div>
        <table class="table mt-2">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Address</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Pincode</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.delivery.adress}}</td>
                    <td>{{this.delivery.mobile}}</td>
                    <td>{{this.delivery.pincode}}</td>
                    <td>{{this.total}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        <a href="/view-order-products/{{this._id}}" class="btn btn-primary text-light">Details</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <center>
                <h2 class="text-warning" style="margin-top: 40vh;">No orders to show</h2>
            </center>
        {{/if}}
    </div>
</section>